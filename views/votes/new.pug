extends ../layout

block content
  h1= title

  #header
    h1  Poll Pal
    img(src="/public/images/logocrop.png")
    
  form#formAddVote(name="addvote",method="post",action="/votes")
    label Session Name:
      input#inputName(type="text", placeholder="must-be-unique", name="name")

    label Question:
      input#inputQuestion(type="text", name="question")

    label Voting type:
      select(name="type")
        option(value="agreement") Agreement Voting
        //- option(value="stv") Ranked Choice Voting

    label Responses:
      textarea#inputResponses(name="responses") Yes,No,Abstain

    label Passphrase:
      input#inputPassphrase(type="text", name="passphrase" value=passphrase)
    label
      button#btnSubmit(type="submit") submit
